<div class="container">

<br>
<h2><%= @renter.name.capitalize %></h2>
<br>
<h4><%= @renter.created_at.strftime("Member Since %B %d, %Y") %></h4>
<ziggeo ziggeo-video=<%= @renter.video_url %>
          ziggeo-width=320
          ziggeo-height=240>
</ziggeo>
<br>
<h4><%= @renter.description %></h4>
  <br>
  <% if @renter.has_pets == true %>
    <%= "I've got a pet!" %>
  <% else %>
    <%= "No pets here!"%>
  <br><br>
  <%= link_to 'back', rooms_path %>
  <% end %>


<div class="row" id="allapts">
    <br><br><br><br>
  <h3 class="center-align">Rooms You've Liked</h3>
  <br><br>
    <% @rooms.each do |room| %>
      <% room_id = Room.find(room) %>
      <div class="col s4">
        <div class="card small">
          <div class="card-image">
            <img class="activator" src="<%=room_id['thumbnail_url']%>">
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4" id="roomcardtitle"><%= room_id['title'] %></span>
              <p id="roomcards">$<%=room_id['price']%></p>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><a href="/rooms/<%= room %>"><%= room_id['title'] %></a></span>
              <p id="roomcards">$<%= room_id['price'] %> per month</p>
              <p id="roomcards"><%= room_id['borough'] %></p>
              <p id="roomcards"><%= room_id['description'] %></p>
              <i class="card-title activator" id="closelink">close</i>
          </div>
        </div>
      </div>
    <% end %>
  </div>











<br><br>
<% if current_renter && current_renter.email == @renter.email %>

  <%= link_to 'edit', edit_renter_path(@renter) %>
  <%= link_to 'delete', @renter, method: :delete %>
<% end %>
</div>
