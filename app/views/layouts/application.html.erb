<!DOCTYPE html>
<html>
<head>
  <title>HackPanthers</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>
     <% if current_user %>
       <p id="username">Signed in as <%= current_user.email %></p>
       <p class="blue"><%= link_to "Logout", '/logout' %></p>
     <% else %>
       <%= link_to 'Login', '/login' %>
       <%= link_to 'Signup', '/signup', :class=>"navlink" %>
     <% end %>
     <a href="/" class="navlink">Home</a>

 </nav>

<%= yield %>

</body>
</html>
