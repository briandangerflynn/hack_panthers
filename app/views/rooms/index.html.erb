<div class="container">
  <div class="row">
    <h2 class="center-align"> Find Your New Home </h2>
      <br><br>
        <div class="input-field col s6 offset-s3">
          <form class="center-align" method="get">
            <br><br>
              <select id="borough" name="borough" multiple>
                <option value="All">All</option>
                <option value="manhattan">Manhattan</option>
                <option value="brooklyn">Brooklyn</option>
                <option value="queens">Queens</option>
                <option value="statenisland">Staten Island</option>
                <option value="thebronx">The Bronx</option>
              </select>
            <label for="borough">Choose a Borough</label>
          </form>
      </div>
    </div>

<div class="row" id="allapts">
    <br><br><br><br>
  <h3 class="center-align">Available Rooms</h3>
  <br><br>
    <% @rooms.each do |room| %>
      <div class="col s4">
        <div class="card small">
          <div class="card-image">
            <img class="activator" src="http://st.hzcdn.com/simgs/530192e40fd76a2c_4-8816/modern-bedroom.jpg">
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4" id="roomcardtitle"><%= room['title'] %></span>
              <p id="roomcards">$<%=room['price']%></p>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><a href="/rooms/<%=room.id%>"><%= room['title'] %></a></span>
              <p id="roomcards">$<%= room['price'] %> per month</p>
              <p id="roomcards"><%= room['borough'] %></p>
              <p id="roomcards"><%= room['description'] %></p>
              <i class="card-title activator" id="closelink">close</i>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
