
<nav>
  <div class="nav-wrapper">
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if current_renter %>
          <li><a href="/" class="navlink">Home</a></li>
          <li>Signed in as <%= current_renter.email %></li>
