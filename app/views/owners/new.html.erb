
<div class="container">

    <div class="row">
        <div class="col s8 offset-s2">
            <h2 class="center-align">Sign Up to Get Started</h2>
            <div class="input-field">
                <%= form_for @owner, url: {action: 'create'} do |f| %>
                <%= f.label :name %>
                <%= f.text_field :name %>
                <br /><br />
            </div>
            <div class="input-field">
                <%= f.label :email %>
                <%= f.text_field :email %>
                <br /><br />
            </div>
            <div class="input-field">
                <%= f.label :password %>
                <%= f.text_field :password %>
                <br /><br />
            </div>
                <%= f.submit "Sign Up" %>
                <% end %>
            <p class="center-align"><%= link_to 'cancel', "/" %></p>
                <br>


            <p class="center-align">
                <%= link_to 'Already have an account? Log in', "/ownerlogin" %></p>

        </div>
    </div>
</div>
